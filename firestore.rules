rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow users to read/write their own progress data
    // This covers: completedLessons, lessonScores, completedQuizzes, quizScores, 
    // quizAttempts, questionPoints, badges, achievements, etc.
    match /userProgress/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Allow authenticated users to read ALL user progress for leaderboard functionality
    match /userProgress/{document=**} {
      allow read: if request.auth != null;
    }
    
    // Allow users to read/write their own handwriting progress
    match /handwritingProgress/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Allow users to read/write individual character progress
    match /handwritingProgress/{userId}/characters/{characterId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Allow authenticated users to read quiz data (static content)
    match /quizzes/{document=**} {
      allow read: if request.auth != null;
    }
    
    // Allow authenticated users to read lesson data (static content)
    match /lessons/{document=**} {
      allow read: if request.auth != null;
    }
    
    // Allow users to read/write their own user profile data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Optional: Allow reading of public user profiles for social features
    match /users/{document=**} {
      allow read: if request.auth != null;
    }
  }
}
